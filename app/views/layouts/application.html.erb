<!DOCTYPE html>
<html>
  <head>
    <title>AwesomeAnswers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
    <link href="https://fonts.googleapis.com/css?family=Bangers&display=swap" rel="stylesheet">
  </head>

  <body>
    <nav class = "navbar">
    <div>
      <% if user_signed_in? %>
        Hello <strong><%= link_to current_user.full_name, user_path(current_user.id) %></strong>,
        <%= link_to "Logout", session_path, method: :delete,
          data: {confirm: "Are you sure you want to log out?"} %>
          |
        <%= link_to "Liked Questions", liked_questions_path %>
      <% else %>
        <%= link_to "Login", new_session_path %> |
        <%= link_to "Sign Up", new_user_path %>
      <% end %>
    </div>
    <div>
      <%=link_to('Home', root_path)%>
       |
      <%=link_to('All Questions', questions_path)%>
       |
      <%=link_to('New Questions', new_question_path)%>
       |
      <%=link_to('Contact Us', contacts_new_path)%>
    </div>
    </nav>
    <p>
    <%#= flash[:notice] || flash[:alert]%>
    <% flash.each do |type, message| %>
      <div class="flash flash-<%= type %>">
        <%= message %>
      </div>
    <% end %>
    </p>
    <%= yield %>
  </body>
</html>
